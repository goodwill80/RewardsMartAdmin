<%- layout('layout') -%>
<div class="container">
<form method="post" action="/users-admin %>" class="userEditForm" role="form">
  <input name="_method" type="hidden" value="PUT">


  <h3><%= data.profile.name %></h3>

  <div class="form-group">
    <label for="email">email</label>
    <input type="text" class="form-control" id="email" name="email" aria-describedby="email" value="<%= data.email %>">
    <small id="Help" class="form-text text-muted">Please update user email</small>
  </div>

 <div class="form-group">
   <label for="address">address</label>
   <input type="text" class="form-control" id="address" name="address" aria-describedby="product" value="<%= data.address %>">
   <small id="address" class="form-text text-muted">Please update user email</small>
 </div>

 <div class="form-group">
   <label for="membership">Membership</label>
   <input type="text" class="form-control" id="membership" name="membership" aria-describedby="product" value="<%= data.membership %>">
   <small id="Help" class="form-text text-muted">Please update membership status</small>
 </div>

 <div class="form-group">
   <label for="points">Points Balance</label>
   <input type="text" class="form-control" id="points" name="points" aria-describedby="points" value="<%= data.points %>">
   <small id="points" class="form-text text-muted">Add Member's points</small>
 </div>


 <button type="submit" class="btn btn-primary">Submit</button>
 <div class="buttonside">
 <p><a class="btn btn-danger" href="/users-admin" role="button">Cancel &raquo;</a></p>
 </div>
</form>




</div>
